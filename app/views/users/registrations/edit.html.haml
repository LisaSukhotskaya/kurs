.container.text-center
  .col-md-4.col-md-offset-4
    %h2
      Редактировать аккаунт
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = devise_error_messages!
      .form-group
        = f.label 'Имя'
        = f.text_field :first_name, class: 'form-control'
      .form-group
        = f.label 'Фамилия'
        = f.text_field :last_name, class: 'form-control'
      .form-group
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, class: 'form-control'
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      .form-group
        = f.label 'Новый пароль'
        %i (оставьте пустым, если не хотите менять пароль)
        %br/
        = f.password_field :password, autocomplete: "off", class: 'form-control'
        - if @minimum_password_length
          %br/
          %em
            = @minimum_password_length
            символов минимум
      .form-group
        = f.label 'Подтверждение нового пароля'
        %br/
        = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
      .form-group
        = f.label :current_password
        %i (введите текущий пароль, чтобы подтвердить изменения)
        %br/
        = f.password_field :current_password, autocomplete: "off", class: 'form-control'
      .actions
        = f.submit "Обновить аккаунт", class: 'btn btn-success'
    %p
      #{button_to "Удалить мой аккаунт", registration_path(resource_name), data: { confirm: "Вы уверены?" }, method: :delete}
    = link_to "Назад", :back
