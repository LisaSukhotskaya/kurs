.container.text-center
  %h1.margin-index Добавление блузки
  .row
    = form_for @blouse do |j|
      .col-md-2.col-md-offset-3
        .form-group
          = j.label 'Фирма'
          = j.text_field :brand, class: 'form-control'
        .form-group
          = j.label 'Размер'
          = j.text_field :size, class: 'form-control'
        .form-group
          = j.label 'Количество'
          = j.number_field :quantity, class: 'form-control', id: 'shest', step: :any
      .col-md-2
        .form-group
          = j.label 'Цвет'
          = j.text_field :color, class: 'form-control'
        .form-group
          = j.label 'Рисунок'
          = j.text_field :print, class: 'form-control'
        .form-group
          = j.label 'Цена за штуку'
          = j.number_field :cost, class: 'form-control', id: 'shest', step: :any
      .col-md-2
        .form-group
          = j.label 'Материал'
          = j.text_field :cloth, class: 'form-control'
        .form-group
          = j.label 'Пол'
          = j.select :gender, options_for_select(%w[Женские]), {}, class: 'form-control'
        .form-group
          = j.label 'Изображение'
          = j.file_field :image, class: 'form-control'
      .col-md-4.col-md-offset-4
        .form-group
          = j.label 'Описание'
          = j.text_area :description, class: 'form-control'
      .col-md-4.col-md-offset-4
        .form-group
          = j.submit 'Добавить', class: 'btn btn-success'
